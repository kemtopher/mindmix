{% layout 'customers' %}

<h1 class='text-3xl font-bold mb-2'>Welcome back!</h1>
<p class='text-gray-600 mb-6'>Enter to get unlimited access to data & information.</p>
{% form 'customer_login' %}
  {{ form.errors | default_errors }}
  <div>
    <label for='CustomerEmail' class='block text-sm font-medium text-gray-700'>Email</label>
    <input
      type='email'
      name='customer[email]'
      id='CustomerEmail'
      required
      class='mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500'
      placeholder='Enter your mail address'
    >
  </div>
  {% if form.password_needed %}
    <div>
      <label for='CustomerPassword' class='block text-sm font-medium text-gray-700'>Password</label>
      <input
        type='password'
        name='customer[password]'
        id='CustomerPassword'
        required
        class='mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500'
        placeholder='Enter password'
      >
    </div>
    <div class='flex items-center justify-between'>
      <label class='flex items-center space-x-2 text-sm text-gray-700'>
        <input
          type='checkbox'
          name='remember'
          class='h-4 w-4 text-purple-600 border-gray-300 rounded focus:ring-purple-500'
        >
        <span>Remember me</span>
      </label>
      <a href='/account/login#recover' class='text-sm text-purple-600 hover:underline'>Forgot your password?</a>
    </div>
  {% endif %}
  <button
    type='submit'
    class='w-full mt-4 bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-4 rounded-md shadow'
  >
    Log In
  </button>
{% endform %}

<p class='mt-4 text-sm text-center'>
  Don't have an account? <a href='/account/register' class='text-purple-600 hover:underline'>Register here</a>
</p>
<p class='mt-2 text-sm text-center'>
  or <a href='{{ shop.url }}' class='text-purple-600 hover:underline'>Return to Store</a>
</p>
{% if shop.checkout.guest_login %}
  {% form 'guest_login' %}
    <button class='mt-6 w-full bg-gray-200 text-gray-700 font-semibold py-2 px-4 rounded-md hover:bg-gray-300'>
      Continue as Guest
    </button>
  {% endform %}
{% endif %}
