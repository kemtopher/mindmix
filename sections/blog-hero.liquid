<div class='blog-hero' style='height:40vh;'>
  {% if section.settings.hero_image != blank %}
    <div
      class='hero-bg'
      style='
        width:100%;
        height:100%;
        background-image:url({{ section.settings.hero_image | image_url: width:2000 }});
        background-size:cover;
        background-position:center;
      '
    >
      <div
        class='hero-inner'
        style='
          display:flex;
          align-items:center;
          justify-content:center;
          height:100%;
        '
      >
        <h1
          style='
            font-size:4rem;
            font-weight:700;
            color:white;
          '
        >
          {{ section.settings.hero_title }}
        </h1>
      </div>
    </div>
  {% else %}
    <div
      class='hero-inner'
      style='
        display:flex;
        align-items:center;
        justify-content:center;
        height:100%;
        background:#333;
      '
    >
      <h1
        style='
          font-size:4rem;
          font-weight:700;
          color:white;
        '
      >
        {{ section.settings.hero_title }}
      </h1>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Blog Hero",
  "settings": [
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "Blog"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Background Image"
    }
  ],
  "presets": [
    {
      "name": "Blog Hero"
    }
  ]
}
{% endschema %}
