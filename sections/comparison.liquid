          }
        },
        {
          "type": "comparison_row",
          "settings": {
            "feature": "4+ Hour Focus",
            "mindmix": true,
            "coffee": false,
            "energy_drinks": false,
            "prescription": true
          }
        },
        {
          "type": "comparison_row",
          "settings": {
            "feature": "Zero Artificial Ingredients",
            "mindmix": true,
            "coffee": true,
            "energy_drinks": false,
            "prescription": false
          }
        },
        {
          "type": "comparison_row",
          "settings": {
            "feature": "Brain Health Support",
            "mindmix": true,
