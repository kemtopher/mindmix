{% if section.settings.heading != blank %}
  <div class='footer-link-group'>
    <h5 class='text-white font-semibold mb-4'>{{ section.settings.heading }}</h5>

    <ul class='space-y-2'>
      {% for block in section.blocks %}
        <li>
          <a href='{{ block.settings.link_url }}' class='text-light hover:text-primary transition-colors'>
            {{ block.settings.link_label }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
{% endif %}

{% schema %}
{
  "name": "Footer Link Group",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Group Heading",
      "default": "Shop"
    }
  ],
  "blocks": [
    {
      "type": "link_item",
      "name": "Link",
      "settings": [
        {
          "type": "text",
          "id": "link_label",
          "label": "Link Label",
          "default": "Example Link"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Footer Link Group",
      "category": "Footer"
    }
  ]
}
{% endschema %}
