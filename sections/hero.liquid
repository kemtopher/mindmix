<section class='min-h-screen pt-24 pb-16 relative overflow-hidden neural-bg flex flex-col items-center justify-between'>
  <div class='h-full w-full flex flex-1 items-center'>
    <div class='container-custom relative'>
      <div class='grid lg:grid-cols-2 gap-12 items-center'>
        <div class='fade-in'>
          <p class='text-white font-semibold mb-8'>{{ section.settings.tagline }}</p>
          <h1 class='text-white mb-4'>
            {% assign words = section.settings.heading | split: ' ' %}
            {% for word in words %}
              <!-- <br> -->
              <span class='text-primary mb-4 text-5xl md:text-6xl font-bold tracking-tight'>{{ word }}</span>
            {% endfor %}
          </h1>
          <h3 class='text-white mb-4 text-xl md:text-2xl font-bold tracking-tight'>
            {{ section.settings.subheading }}
          </h3>
          <p class='text-primary  text-3xl md:text-4xl font-bold tracking-tight font-bold mb-6'>
            {{ section.settings.benefits }}
          </p>
          <p class='text-light mb-8 max-w-md'>{{ section.settings.description }}</p>
        </div>

        <div class='fade-in relative' style='transition-delay: 0.3s'>
          <div class='relative flex justify-center items-center h-[500px]'>
            {% if section.settings.hero_image != blank %}
              <img
                class='h-full'
                alt='Photo of MindMix Guava Passion package'
                src='{{ section.settings.hero_image | image_url }}'
              >
            {% else %}
              <img
                class='h-full max-w-[200px]'
                alt='Photo of MindMix Guava Passion package'
                src='{{ mindmix_green_apple_kiwi.png | asset_url }}'
              >
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>

  {% render 'benefits-banner' %}
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "DAILY NOOTROPIC DRINK MIX"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "UNLOCK YOUR MENTAL EDGE"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "ENGINEERED FOR PEAK PERFORMANCE"
    },
    {
      "type": "text",
      "id": "benefits",
      "label": "Benefits",
      "default": "Clarity. Energy. Focus."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Experience cognitive enhancement with our scientifically formulated nootropic drink mix. Optimize your mind."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Shop Now"
    },
    {
      "type": "text",
      "id": "secondary_cta_text",
      "label": "Secondary CTA Text",
      "default": "Try Free Sample"
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Statistic",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Statistic Text"
        },
        {
          "type": "text",
          "id": "highlight",
          "label": "Highlighted Value"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "blocks": [
        {
          "type": "stat",
          "settings": {
            "text": "Focus kicks in",
            "highlight": "30 minutes"
          }
        },
        {
          "type": "stat",
          "settings": {
            "text": "students trust MindMix",
            "highlight": "10,000+"
          }
        },
        {
          "type": "stat",
          "settings": {
            "text": "Zero Crash Guarantee",
            "highlight": ""
          }
        }
      ]
    }
  ]
}
{% endschema %}