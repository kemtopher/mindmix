{% schema %}
{
  "name": "Scientific Credibility",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "BACKED BY NEUROSCIENCE"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Every ingredient chosen for maximum cognitive impact"
    }
  ],
  "blocks": [
    {
      "type": "research_study",
      "name": "Research Study",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "ingredient",
          "label": "Ingredient Name",
          "default": "Rhodiola Rosea"
        },
        {
          "type": "textarea",
          "id": "findings",
          "label": "Research Findings",
          "default": "Clinical trials demonstrate significant reduction in mental fatigue and improved cognitive function during stress-inducing tasks."
        },
        {
          "type": "text",
          "id": "source",
          "label": "Source",
          "default": "Journal of Alternative Medicine"
        },
        {
          "type": "text",
          "id": "year",
          "label": "Year",
          "default": "2023"
        }
      ]
    },
    {
      "type": "credential",
      "name": "Credential",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Third-Party Tested"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Every batch independently verified for purity and potency"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Scientific Credibility",
      "blocks": [
        {
          "type": "research_study",
          "settings": {
            "ingredient": "Rhodiola Rosea",
            "findings": "Clinical trials demonstrate significant reduction in mental fatigue and improved cognitive function during stress-inducing tasks.",
            "source": "Journal of Alternative Medicine",
            "year": "2023"
          }
        },
        {
          "type": "research_study",
          "settings": {
            "ingredient": "Lion's Mane Mushroom",
            "findings": "Research indicates significant enhancement in nerve growth factor (NGF) production, leading to improved memory formation.",
            "source": "International Journal of Medicinal Mushrooms",
            "year": "2023"
          }
        },
        {
          "type": "research_study",
          "settings": {
            "ingredient": "L-Theanine + Green Tea",
            "findings": "Combined supplementation shows marked improvement in attention switching and reduced susceptibility to distracting information.",
            "source": "Nutritional Neuroscience",
            "year": "2023"
          }
        },
        {
          "type": "credential",
          "settings": {
            "title": "Third-Party Tested",
            "description": "Every batch independently verified for purity and potency"
          }
        },
        {
          "type": "credential",
          "settings": {
            "title": "Neuroscientist Formulated",
            "description": "Developed by cognitive performance experts"
          }
        },
        {
          "type": "credential",
          "settings": {
            "title": "Transparent Sourcing",
            "description": "Full ingredient traceability and quality control"
          }
        },
        {
          "type": "credential",
          "settings": {
            "title": "No Artificial Stimulants",
            "description": "Clean formula without synthetic additives"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<section class="section-padding bg-gradient-to-b from-darker to-dark relative">
  <div class="absolute inset-0 bg-neuron-pattern opacity-5"></div>
  
  <div class="container-custom relative z-10">
    <div class="text-center max-w-3xl mx-auto mb-16 fade-in">
      <h2 class="text-white mb-4">{{ section.settings.heading | split: ' BY ' | first }} <span class="text-primary">BY {{ section.settings.heading | split: ' BY ' | last }}</span></h2>
      <p class="text-light">{{ section.settings.subheading }}</p>
    </div>
    
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="fade-in">
        <div class="p-6 bg-darker rounded-xl border border-primary/20 hover:border-primary/40 transition-colors">
          <div class="flex items-center mb-6">
            <svg class="h-8 w-8 text-primary mr-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M10 2v7.31"/>
              <path d="M14 9.3V1.99"/>
              <path d="M8.5 2h7"/>
              <path d="M14 9.3a6.5 6.5 0 1 1-4 0"/>
              <path d="M5.52 16h12.96"/>
            </svg>
            <h3 class="text-white text-xl">Clinical Research</h3>
          </div>
          
          <div class="space-y-4">
            {% for block in section.blocks %}
              {% if block.type == 'research_study' %}
                <div class="p-4 bg-darkest rounded-lg">
                  <h5 class="text-primary font-medium mb-2">{{ block.settings.ingredient }}</h5>
                  <p class="text-light text-sm">{{ block.settings.findings }}</p>
                  <p class="text-xs text-light/70 mt-2">Source: {{ block.settings.source }}, {{ block.settings.year }}</p>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
      
      <div class="fade-in">
        <div class="grid grid-cols-2 gap-6">
          {% for block in section.blocks %}
            {% if block.type == 'credential' %}
              <div class="p-6 bg-darker rounded-xl border border-primary/20 hover:border-primary/40 transition-colors">
                <div class="flex flex-col items-center text-center">
                  {% case forloop.index %}
                    {% when 1 %}
                      <svg class="h-12 w-12 text-primary mb-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 15l-2-2h4l-2 2z"/>
                        <path d="M12 15v3"/>
                        <path d="M8 7.5A3.5 3.5 0 0 1 12 4"/>
                        <path d="M16 7.5A3.5 3.5 0 0 0 12 4"/>
                        <path d="M12 4v3"/>
                        <circle cx="12" cy="12" r="9"/>
                      </svg>
                    {% when 2 %}
                      <svg class="h-12 w-12 text-primary mb-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9.5 2A2.5 2.5 0 0 1 12 4.5V5a3 3 0 0 0 6 0V3a2 2 0 0 1 2-2v6.5a3 3 0 0 1-1 2.24A7 7 0 0 1 12 18a7 7 0 0 1-7-7V2a2 2 0 0 1 2 2v1a3 3 0 0 0 6 0V4.5A2.5 2.5 0 0 1 9.5 2Z"/>
                        <path d="M12 18v4"/>
                        <path d="M8 22h8"/>
                      </svg>
                    {% when 3 %}
                      <svg class="h-12 w-12 text-primary mb-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                        <polyline points="22 4 12 14.01 9 11.01"/>
                      </svg>
                    {% else %}
                      <svg class="h-12 w-12 text-primary mb-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                      </svg>
                  {% endcase %}
                  <h4 class="text-white text-lg mb-2">{{ block.settings.title }}</h4>
                  <p class="text-light text-sm">{{ block.settings.description }}</p>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>