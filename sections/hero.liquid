<section class='min-h-screen pt-24 pb-16 relative overflow-hidden neural-bg flex flex-col items-center justify-between'>
  <div class='h-full w-full flex flex-1 items-center'>
    <div class='container-custom relative'>
      <div class='grid lg:grid-cols-2 gap-12 items-center'>
        <div class='fade-in'>
          <p class='text-white font-semibold mb-8'>{{ section.settings.tagline }}</p>
          <h1 class='text-white mb-4'>
            {% assign words = section.settings.heading | split: ' ' %}
            {% for word in words %}
              <!-- <br> -->
              <span class='text-primary mb-4 text-5xl md:text-6xl font-bold tracking-tight'>{{ word }}</span>
            {% endfor %}
          </h1>
          <h3 class='text-white mb-4 text-xl md:text-2xl font-bold tracking-tight'>
            {{ section.settings.subheading }}
          </h3>
          <p class='text-primary  text-3xl md:text-4xl font-bold tracking-tight font-bold mb-6'>
            {{ section.settings.benefits }}
          </p>
          <p class='text-light mb-8 max-w-md'>{{ section.settings.description }}</p>
        </div>

        <div class='fade-in relative' style='transition-delay: 0.3s'>
          <div class='relative flex justify-center items-center h-[500px]'>
            {% if section.settings.hero_image != blank %}
              <img
                class='h-full'
                alt='Photo of MindMix Guava Passion package'
                src='{{ section.settings.hero_image | image_url }}'
              >
            {% else %}
              <img
                class='h-full max-w-[200px]'
                alt='Photo of MindMix Guava Passion package'
                src='{{ mindmix_green_apple_kiwi.png | asset_url }}'
              >
            {% endif %}
            <div class='absolute -bottom-8 right md:right-1/2'>{% render 'try-it-free-btn' %}</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <section id='benefits-banner' class='w-full'>
    <div class='container-custom'>
      <div class='flex flex-wrap justify-center lg:justify-between gap-8'>
        <div class='fade-in flex flex-col lg:flex-row items-center lg:items-center group'>
          <svg
            xmlns='http://www.w3.org/2000/svg'
            class='icon icon-clock h-12 w-12 text-primary mr-3 group-hover:scale-110 transition-transform'
            width='24'
            height='24'
            viewBox='0 0 24 24'
            fill='none'
            stroke='currentColor'
            stroke-width='2'
            stroke-linecap='round'
            stroke-linejoin='round'
          >
            <circle cx="12" cy="12" r="10"/>
            <polyline points="12 6 12 12 16 14"/>
          </svg>
          <!-- <p class='text-white'>Focus kicks in: <span class='text-primary font-semibold'>30 minutes</span></p> -->
          <div class='benefit-text text-white'>
            {{ section.settings.benefit_1 }}
          </div>
        </div>

        <div class='fade-in flex flex-col lg:flex-row items-center lg:items-center group transition delay-200'>
          <svg
            xmlns='http://www.w3.org/2000/svg'
            class='icon icon-users h-12 w-12 text-primary mr-3 group-hover:scale-110 transition-transform'
            width='24'
            height='24'
            viewBox='0 0 24 24'
            fill='none'
            stroke='currentColor'
            stroke-width='2'
            stroke-linecap='round'
            stroke-linejoin='round'
          >
            <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2" />
            <circle cx="9" cy="7" r="4" />
            <path d="M23 21v-2a4 4 0 00-3-3.87" />
            <path d="M16 3.13a4 4 0 010 7.75" />
          </svg>
          <!-- <p class='text-white'>Clinically tested ingredients</p> -->
          <div class='benefit-text text-white'>
            {{ section.settings.benefit_2 }}
          </div>
        </div>

        <div class='fade-in flex flex-col lg:flex-row items-center lg:items-center group transition delay-200'>
          <svg
            xmlns='http://www.w3.org/2000/svg'
            class='icon icon-shield h-12 w-12 text-primary mr-3 group-hover:scale-110 transition-transform'
            width='24'
            height='24'
            viewBox='0 0 24 24'
            fill='none'
            stroke='currentColor'
            stroke-width='2'
            stroke-linecap='round'
            stroke-linejoin='round'
          >
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
          </svg>
          <!-- <p class='text-white'>Zero crash guarantee</p> -->
          <div class='benefit-text text-white'>
            {{ section.settings.benefit_3 }}
          </div>
        </div>
      </div>
    </div>
  </section>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "DAILY NOOTROPIC DRINK MIX"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "UNLOCK YOUR MENTAL EDGE"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "ENGINEERED FOR PEAK PERFORMANCE"
    },
    {
      "type": "text",
      "id": "benefits",
      "label": "Benefits",
      "default": "Clarity. Energy. Focus."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Experience cognitive enhancement with our scientifically formulated nootropic drink mix. Optimize your mind."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Shop Now"
    },
    {
      "type": "text",
      "id": "secondary_cta_text",
      "label": "Secondary CTA Text",
      "default": "Try Free Sample"
    },
    {
      "type": "header",
      "content": "Bold words to emphasize them in brand color"
    },
    {
      "type": "richtext",
      "id": "benefit_1",
      "label": "Benefit 1 text",
      "default": "<p>Focus kicks in: <strong>30 minutes</strong></p>"
    },
    {
      "type": "richtext",
      "id": "benefit_2",
      "label": "Benefit 2 text",
      "default": "<p>Clinically tested ingredients</p>"
    },
    {
      "type": "richtext",
      "id": "benefit_3",
      "label": "Benefit 3 text",
      "default": "<p>Zero crash guarantee</p>"
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Statistic",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Statistic Text"
        },
        {
          "type": "text",
          "id": "highlight",
          "label": "Highlighted Value"
        }
      ]
    }
  ]
}
{% endschema %}
