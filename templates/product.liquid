{% comment %}Product template{% endcomment %}

<div class="container-custom py-24">
  <div class="grid md:grid-cols-2 gap-12">
    <div class="product-gallery">
      {% for image in product.images %}
        <div class="mb-4">
          <img src="{{ image | img_url: '800x' }}" alt="{{ image.alt | escape }}" class="w-full rounded-lg">
        </div>
      {% endfor %}
    </div>
    
    <div class="product-info">
      <h1 class="text-4xl font-bold mb-4">{{ product.title }}</h1>
      <div class="text-2xl text-primary font-bold mb-6">{{ product.price | money }}</div>
      
      <div class="mb-8">{{ product.description }}</div>
      
      {% form 'product', product %}
        <select name="id" class="w-full mb-4 bg-darker border border-gray-800 rounded-md p-3">
          {% for variant in product.variants %}
            <option value="{{ variant.id }}">{{ variant.title }}</option>
          {% endfor %}
        </select>
        
        <button type="submit" class="btn btn-primary w-full">Add to Cart</button>
      {% endform %}
    </div>
  </div>
</div>