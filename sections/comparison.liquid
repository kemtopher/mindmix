<section class='section-padding bg-dark relative'>
  <div class='absolute inset-0 bg-neuron-pattern opacity-5'></div>

  <div class='container-custom relative z-10'>
    <div class='text-center max-w-3xl mx-auto mb-16 fade-in is-visible'>
      <h2 class='text-white mb-6 text-5xl md:text-6xl font-bold tracking-tight'>
        WHY MINDMIX <span class='block text-5xl md:text-6xl font-bold tracking-tight mt-2 text-primary'>DOMINATES</span>
      </h2>
      <p class='text-light text-xl'>100% Natural Ingredients, Proudly Made in USA</p>
    </div>

    <div class='overflow-x-auto fade-in'>
      <table class='w-full min-w-[600px]'>
        <thead>
          <tr class='border-b border-gray-800'>
            <th class='text-left py-4 px-4 text-light'></th>
            <th class='text-center py-4 px-4 text-primary font-bold'>MindMix</th>
            <th class='text-center py-4 px-4 text-light'>Coffee</th>
            <th class='text-center py-4 px-4 text-light'>Energy Drinks</th>
            <th class='text-center py-4 px-4 text-light'>Prescription</th>
          </tr>
        </thead>
        <tbody>
          {% for block in section.blocks %}
            {% if block.type == 'comparison_row' %}
              <tr class='border-b border-gray-800'>
                <td class='text-left py-4 px-4 text-light'>{{ block.settings.feature }}</td>
                <td class='text-center py-4 px-4'>
                  {% if block.settings.mindmix %}
                    <svg
                      class='h-6 w-6 text-primary mx-auto'
                      viewBox='0 0 24 24'
                      fill='none'
                      xmlns='http://www.w3.org/2000/svg'
                    >
                      <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <polyline points="22 4 12 14.01 9 11.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% else %}
                    <svg
                      class='h-6 w-6 text-red-500 mx-auto'
                      viewBox='0 0 24 24'
                      fill='none'
                      xmlns='http://www.w3.org/2000/svg'
                    >
                      <line x1="18" y1="6" x2="6" y2="18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <line x1="6" y1="6" x2="18" y2="18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% endif %}
                </td>
                <td class='text-center py-4 px-4'>
                  {% if block.settings.coffee %}
                    <svg
                      class='h-6 w-6 text-light/50 mx-auto'
                      viewBox='0 0 24 24'
                      fill='none'
                      xmlns='http://www.w3.org/2000/svg'
                    >
                      <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <polyline points="22 4 12 14.01 9 11.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% else %}
                    <svg
                      class='h-6 w-6 text-red-500 mx-auto'
                      viewBox='0 0 24 24'
                      fill='none'
                      xmlns='http://www.w3.org/2000/svg'
                    >
                      <line x1="18" y1="6" x2="6" y2="18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <line x1="6" y1="6" x2="18" y2="18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% endif %}
                </td>
                <td class='text-center py-4 px-4'>
                  {% if block.settings.energy_drinks %}
                    <svg
                      class='h-6 w-6 text-light/50 mx-auto'
                      viewBox='0 0 24 24'
                      fill='none'
                      xmlns='http://www.w3.org/2000/svg'
                    >
                      <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <polyline points="22 4 12 14.01 9 11.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% else %}
                    <svg
                      class='h-6 w-6 text-red-500 mx-auto'
                      viewBox='0 0 24 24'
                      fill='none'
                      xmlns='http://www.w3.org/2000/svg'
                    >
                      <line x1="18" y1="6" x2="6" y2="18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <line x1="6" y1="6" x2="18" y2="18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% endif %}
                </td>
                <td class='text-center py-4 px-4'>
                  {% if block.settings.prescription %}
                    <svg
                      class='h-6 w-6 text-light/50 mx-auto'
                      viewBox='0 0 24 24'
                      fill='none'
                      xmlns='http://www.w3.org/2000/svg'
                    >
                      <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <polyline points="22 4 12 14.01 9 11.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% else %}
                    <svg
                      class='h-6 w-6 text-red-500 mx-auto'
                      viewBox='0 0 24 24'
                      fill='none'
                      xmlns='http://www.w3.org/2000/svg'
                    >
                      <line x1="18" y1="6" x2="6" y2="18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <line x1="6" y1="6" x2="18" y2="18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% endif %}
                </td>
              </tr>
            {% endif %}
          {% endfor %}
        </tbody>
      </table>
    </div>

    <div class='mt-16 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6 fade-in'>
      {% for block in section.blocks %}
        {% if block.type == 'certification' %}
          <div class='p-4 bg-darker rounded-lg border border-gray-800 flex flex-col items-center justify-center text-center'>
            <div class='h-12 w-12 mb-2 rounded-full bg-primary/10 flex items-center justify-center'>
              {% if block.settings.icon != blank %}
                {{
                  block.settings.icon
                  | image_url: width: 96
                  | image_tag: class: 'h-6 w-6', alt: block.settings.title
                }}
              {% else %}
                {% case forloop.index %}
                  {% when 1 %}
                    <svg
                      class='h-6 w-6 text-primary'
                      viewBox='0 0 24 24'
                      fill='none'
                      xmlns='http://www.w3.org/2000/svg'
                    >
                      <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% when 2 %}
                    <svg
                      class='h-6 w-6 text-primary'
                      viewBox='0 0 24 24'
                      fill='none'
                      xmlns='http://www.w3.org/2000/svg'
                    >
                      <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <polyline points="22 4 12 14.01 9 11.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% when 3 %}
                    <svg
                      class='h-6 w-6 text-primary'
                      viewBox='0 0 24 24'
                      fill='none'
                      xmlns='http://www.w3.org/2000/svg'
                    >
                      <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <line x1="12" y1="17" x2="12.01" y2="17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% when 4 %}
                    <svg
                      class='h-6 w-6 text-primary'
                      viewBox='0 0 24 24'
                      fill='none'
                      xmlns='http://www.w3.org/2000/svg'
                    >
                      <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <path d="M12 8v4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <path d="M12 16h.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% when 5 %}
                    <svg
                      class='h-6 w-6 text-primary'
                      viewBox='0 0 24 24'
                      fill='none'
                      xmlns='http://www.w3.org/2000/svg'
                    >
                      <rect x="3" y="11" width="18" height="11" rx="2" ry="2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <path d="M7 11V7a5 5 0 0 1 10 0v4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% else %}
                    <svg
                      class='h-6 w-6 text-primary'
                      viewBox='0 0 24 24'
                      fill='none'
                      xmlns='http://www.w3.org/2000/svg'
                    >
                      <path d="M5 12h14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <path d="M12 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                {% endcase %}
              {% endif %}
            </div>
            <p class='text-light text-xs'>{{ block.settings.title }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
