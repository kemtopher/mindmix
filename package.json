{
  "name": "mindmix-theme",
  "version": "1.0.0",
  "scripts": {
    "watch:tailwind": "tailwindcss -i ./assets/theme.css -o ./assets/style.css --watch",
    "shopify": "shopify theme dev",
    "settings": "shopify theme pull --theme main --path=config/settings_data.json --force",
    "dev": "npm run watch:tailwind & shopify theme dev",
    "prettier": "prettier --write \"{layout,sections,snippets,assets,templates}/**/*.{js,css,liquid}\""
  },
  "devDependencies": {
    "@shopify/prettier-plugin-liquid": "^1.9.3",
    "concurrently": "^8.2.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.1"
  }
}