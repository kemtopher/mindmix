          }
        },
        {
          "type": "certification",
          "settings": {
            "title": "FDA Registered Facility"
          }
        },
        {
          "type": "certification",
          "settings": {
            "title": "Third-Party Tested"
          }
        },
        {
          "type": "certification",
          "settings": {
            "title": "GMP Certified"
          }
        },
        {
          "type": "certification",
          "settings": {
