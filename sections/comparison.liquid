        }
      ]
    },
    {
      "type": "certification",
      "name": "Certification",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Comparison Section",
      "blocks": [
        {
          "type": "comparison_row",
          "settings": {
            "feature": "100% Natural",
            "mindmix": true,
            "coffee": true,
            "energy_drinks": false,
            "prescription": false
          }
        },
        {
          "type": "comparison_row",
          "settings": {
