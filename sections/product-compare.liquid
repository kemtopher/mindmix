<!-- Product Compare -->
<section id='shopify-section-product-compare' class='relative bg-primary text-white py-20'>
  <div class='container mx-auto text-center'>
    <h2 class='text-4xl font-bold mb-4'>{{ section.settings.heading }}</h2>
    <p class='text-lg max-w-xl mx-auto'>{{ section.settings.subheading }}</p>
    {% if section.settings.cta_text != blank %}
      <a
        href='{{ section.settings.cta_link }}'
        class='mt-6 inline-block bg-white text-primary px-6 py-3 font-semibold rounded shadow'
      >
        {{ section.settings.cta_text }}
      </a>
    {% endif %}
  </div>
</section>
{% schema %}
{
  "name": "Product Compare",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Feel Your Best Every Day"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "A gentle formula that helps reduce bloating fast."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link",
      "default": "/collections/all"
    }
  ]
}
{% endschema %}
