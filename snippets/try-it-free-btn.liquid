{% if customer %}
  <!-- Customer is logged in -->
  <!-- <a href="{{ product.url }}" class="btn-try">Try It Free</a> -->
  {% assign product_url = '/products/try-it-free' %}
  <a href='{{ product_url }}' class='text-primary hover:text-primary transition-colors'>Try It Free</a>
{% else %}
  <!-- Customer is not logged in, send to login with return_url -->
  <a href='/account/login?return_url={{ product_url | url_encode }}' class='btn-try'>Try It Free</a>
{% endif %}
