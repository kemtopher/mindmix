<section class='min-h-screen pt-24 pb-16 relative overflow-hidden neural-bg flex items-center'>
  <div class='container-custom relative z-10'>
    <div class='grid lg:grid-cols-2 gap-12 items-center'>
      <div class='fade-in'>
        <p class='text-primary font-semibold mb-12'>{{ section.settings.tagline }}</p>
        <h1 class='text-white mb-4'>
          {% assign words = section.settings.heading | split: ' ' %}
          {% for word in words %}
            <!-- <br> -->
            <span class='text-primary mb-4'>{{ word }}</span>
          {% endfor %}
        </h1>
        <h3 class='text-white mb-4'>{{ section.settings.subheading }}</h3>
        <p class='text-primary text-3xl font-bold mb-6 tracking-wide'>{{ section.settings.benefits }}</p>
        <p class='text-light mb-8 max-w-md'>{{ section.settings.description }}</p>

        <!--
          <div class='flex flex-wrap gap-4 mb-12'>
            <a
              href='#pricing'
              class='btn btn-cta  px-8 py-4 text-lg font-bold hover:transform hover:scale-105 transition-transform shadow-lg hover:shadow-glow'
            >
              {{ section.settings.cta_text }}
            </a>
            <a
              href='#pricing'
              class='btn btn-mint px-8 py-4 text-lg font-bold hover:transform hover:scale-105 transition-transform'
            >
              {{ section.settings.secondary_cta_text }}
            </a>
          </div>
        -->

        <div class='grid grid-cols-1 sm:grid-cols-3 gap-6'>
          {% for block in section.blocks %}
            {% if block.type == 'stat' %}
              <div class='fade-in flex items-center' style='transition-delay: {{ forloop.index | times: 0.2 }}'>
                {% case forloop.index %}
                  {% when 1 %}
                    {% render 'icon-clock' %}
                  {% when 2 %}
                    {% render 'icon-users' %}
                  {% when 3 %}
                    {% render 'icon-shield' %}
                {% endcase %}
                <p class='text-white'>
                  {% if block.settings.highlight != blank %}
                    {{ block.settings.text }}:
                    <span class='text-primary font-semibold'>{{ block.settings.highlight }}</span>
                  {% else %}
                    {{ block.settings.text }}
                  {% endif %}
                </p>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <div class='fade-in relative' style='transition-delay: 0.3s'>
        <div class='relative flex justify-center items-center h-[500px]'>
          <img class='h-full' alt='Photo of MindMix Guava Passion package' src='{{ "guava-passion.jpeg" | asset_url }}'>
          <!--
            <img class='h-full' alt='Photo of MindMix Guava Passion package' src='{{ "product-line.png" | asset_url }}'>
          -->
        </div>

        <!--
          <div class='text-center mt-8'>
            <a
              href='#pricing'
              class='text-primary text-3xl font-bold mb-6 tracking-wide'
            >
              {{ section.settings.secondary_cta_text }}
            </a>
          </div>
        -->
      </div>
    </div>
  </div>
</section>

{% render 'animations' %}

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "DAILY NOOTROPIC DRINK MIX"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "UNLOCK YOUR MENTAL EDGE"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "ENGINEERED FOR PEAK PERFORMANCE"
    },
    {
      "type": "text",
      "id": "benefits",
      "label": "Benefits",
      "default": "Clarity. Energy. Focus."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Experience cognitive enhancement with our scientifically formulated nootropic drink mix. Optimize your mind."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Shop Now"
    },
    {
      "type": "text",
      "id": "secondary_cta_text",
      "label": "Secondary CTA Text",
      "default": "Try Free Sample"
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Statistic",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Statistic Text"
        },
        {
          "type": "text",
          "id": "highlight",
          "label": "Highlighted Value"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "blocks": [
        {
          "type": "stat",
          "settings": {
            "text": "Focus kicks in",
            "highlight": "30 minutes"
          }
        },
        {
          "type": "stat",
          "settings": {
            "text": "students trust MindMix",
            "highlight": "10,000+"
          }
        },
        {
          "type": "stat",
          "settings": {
            "text": "Zero crash guarantee",
            "highlight": ""
          }
        }
      ]
    }
  ]
}
{% endschema %}
