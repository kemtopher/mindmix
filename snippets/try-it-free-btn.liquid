{% if customer %}
  <div class='hidden md:block relative group'>
    <a
      href='/products/try-it-free'
      class='btn btn-primary  relative overflow-hidden group-hover:scale-105 transform transition-all duration-500 px-6 py-3 rounded-xl shadow-lg hover:shadow-glow'
      ><span class='relative z-10 flex flex-col items-center leading-tight font-bold text-white'
        ><span class='text-sm font-bold'>Try It Free</span
        ><span class='text-xs font-normal opacity-90'>Just Cover Shipping</span></span
      >
      <div
        class='absolute inset-0 bg-gradient-to-r from-cta via-primary via-blue to-cta bg-[length:300%_100%] animate-shimmer'
      ></div>
    </a>
    <div
      class='absolute -inset-[2px] bg-gradient-to-r from-cta via-primary via-blue to-cta opacity-0 blur-md group-hover:opacity-75 transition-opacity duration-700 -z-10 rounded-xl'
    ></div>
  </div>
{% else %}
  <div class='hidden md:block relative group'>
    <a
      href='/account/login?return_url=/products/try-it-free'
      class='btn btn-primary  relative overflow-hidden group-hover:scale-105 transform transition-all duration-500 px-6 py-3 rounded-xl shadow-lg hover:shadow-glow'
      ><span class='relative z-10 flex flex-col items-center leading-tight font-bold text-white'
        ><span class='text-sm font-bold'>Try It Free</span
        ><span class='text-xs font-normal opacity-90'>Just Cover Shipping</span></span
      >
      <div
        class='absolute inset-0 bg-gradient-to-r from-cta via-primary via-blue to-cta bg-[length:300%_100%] animate-shimmer'
      ></div>
    </a>
    <div
      class='absolute -inset-[2px] bg-gradient-to-r from-cta via-primary via-blue to-cta opacity-0 blur-md group-hover:opacity-75 transition-opacity duration-700 -z-10 rounded-xl'
    ></div>
  </div>
{% endif %}
