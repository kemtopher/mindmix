{% assign menu_items = linklists.main-menu.links %}

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 {% if template != 'index' %}bg-dark/80 backdrop-blur-md py-3 shadow-lg{% else %}bg-transparent py-5{% endif %}">
  <div class="container-custom flex items-center justify-between">
    <a href="/" class="group">
      <span class="text-3xl font-bold text-white group-hover:text-primary transition-colors duration-300">
        {{ shop.name }}
      </span>
    </a>

    <nav class="hidden md:flex items-center space-x-8">
      {% for link in menu_items %}
        <a href="{{ link.url }}" class="text-light hover:text-primary transition-colors">{{ link.title }}</a>
      {% endfor %}
    </nav>

    <div class="hidden md:block relative group">
      <a href="/products" class="btn btn-primary relative overflow-hidden group-hover:scale-105 transform transition-all duration-500">
        <span class="relative z-10 text-center">
          <span class="text-lg font-bold block">Try It Free</span>
          <span class="block text-sm font-normal opacity-90">Just Cover Shipping</span>
        </span>
        <div class="absolute inset-0 bg-gradient-to-r from-cta via-primary via-blue to-cta bg-[length:300%_100%] animate-shimmer opacity-90"></div>
      </a>
      <div class="absolute -inset-[2px] bg-gradient-to-r from-cta via-primary via-blue to-cta opacity-0 blur-md group-hover:opacity-75 transition-opacity duration-700 -z-10"></div>
    </div>

    <button class="md:hidden text-light hover:text-primary" data-mobile-menu-toggle>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <div class="md:hidden bg-darker py-4 px-4 shadow-lg hidden" data-mobile-menu>
    <nav class="flex flex-col space-y-4">
      {% for link in menu_items %}
        <a href="{{ link.url }}" class="text-light hover:text-primary transition-colors py-2">{{ link.title }}</a>
      {% endfor %}
      <a href="/products" class="btn btn-primary w-full relative overflow-hidden">
        <span class="relative z-10 text-center">
          <span class="text-lg font-bold block">Try It Free</span>
          <span class="block text-sm font-normal opacity-90">Just Cover Shipping</span>
        </span>
        <div class="absolute inset-0 bg-gradient-to-r from-cta via-primary via-blue to-cta bg-[length:300%_100%] animate-shimmer opacity-90"></div>
      </a>
    </nav>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuToggle = document.querySelector('[data-mobile-menu-toggle]');
    const mobileMenu = document.querySelector('[data-mobile-menu]');
    const header = document.querySelector('header');

    mobileMenuToggle.addEventListener('click', function() {
      mobileMenu.classList.toggle('hidden');
      const isOpen = !mobileMenu.classList.contains('hidden');
      mobileMenuToggle.innerHTML = isOpen 
        ? '<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>'
        : '<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" /></svg>';
    });

    window.addEventListener('scroll', function() {
      if (window.scrollY > 10) {
        header.classList.add('bg-dark/80', 'backdrop-blur-md', 'py-3', 'shadow-lg');
        header.classList.remove('bg-transparent', 'py-5');
      } else {
        header.classList.remove('bg-dark/80', 'backdrop-blur-md', 'py-3', 'shadow-lg');
        header.classList.add('bg-transparent', 'py-5');
      }
    });
  });
</script>