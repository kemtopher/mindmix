<div class='blog-hero h-[40vh]'>
  <div
    class='hero-bg w-full h-full bg-cover bg-center'
    style="background-image: url('{{ section.settings.image | image_url: width:2000 }}');"
  >
    <div class='hero-inner flex items-center justify-center h-full'>
      <h1 class='relative z-50 text-primary text-6xl font-bold'>
        <!-- {{ section.settings.legal_title }} -->
        {{ page.title }}
      </h1>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Legal Hero",
  "settings": [
    {
      "type": "text",
      "id": "legal_title",
      "label": "Legal Title",
      "default": "Legal Page"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "Legal Hero"
    }
  ]
}
{% endschema %}
