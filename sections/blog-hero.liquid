<div class='blog-hero h-[40vh]'>
  {% if article.image != blank %}
    <div
      class='hero-bg w-full h-full bg-cover bg-center'
      style="background-image: url('{{ article.image | image_url: width:2000 }}');"
    >
      <div
        class='hero-inner flex items-center justify-center h-full'
      >
        <h1
          class='text-white text-6xl text-bold'
        >
          {{ section.settings.hero_title }}
        </h1>
      </div>
    </div>
  {% else %}
    <div
      class='hero-inner h-full flex items-center justify-center bg-blac'
    >
      <h1
        class='text-5xl text-bold text-white'
      >
        {{ section.settings.hero_title }}
      </h1>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Blog Hero",
  "settings": [
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "Blog"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Background Image"
    }
  ],
  "presets": [
    {
      "name": "Blog Hero"
    }
  ]
}
{% endschema %}
